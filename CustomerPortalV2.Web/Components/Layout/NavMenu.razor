@using CustomerPortalV2.Web.Data
@inject UserSession Session
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">CustomerPortalV2</a>
    </div>
</div>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        @if (Session.IsAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/home">
                    <span class="bi bi-house-door-fill"></span> Home
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <button class="btn btn-link nav-link" @onclick="Logout">
                    <span class="bi bi-box-arrow-right"></span> Logout
                </button>
            </div>
        }
    </nav>
</div>

@code {
    private void Logout()
    {
        Session.Logout();
        Navigation.NavigateTo("/", forceLoad: true);
    }
}
